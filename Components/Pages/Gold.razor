@page   "/gold"
@rendermode InteractiveServer 

<h3>It's time to get some gold!</h3>

<p>Add your new gold total: HERE
</p>
<div class="main">
  <ul class="character-cards">
    @if (characters != null)
    {
      @foreach (var gold in characters)
      {
        <li style="background-image: url('@gold.ImageUrl')">
          <div class="character-info">
              <span class="title">@gold.Name</span>
                  @gold.GoldLastSession
                <span class="price">@gold.GoldThisSession</span>
          </div>
        </li>
      }
    }
  </ul>
</div>
